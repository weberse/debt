{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Bill list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Total</th>
                <th>Name</th>
                <th>Comment</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in events %}
            <tr>
                <td><a href="{{ path('get_bill', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.total }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.comment }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('get_bill', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('edit_bill', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('new_bill') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
