{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Debt list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ispaid</th>
                <th>Comment</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('get_debt', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.isPaid }}</td>
                <td>{{ entity.comment }}</td>
                <td>{{ entity.total }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('get_debt', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('edit_debt', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('new_debt') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
