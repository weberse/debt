{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Event</h1>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ data.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('get_events') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('get_event', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(deleteForm) }}</li>
    </ul>
{% endblock %}
